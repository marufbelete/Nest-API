generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/// user model
model User {
  id         String   @id @default(uuid())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  email      String   @unique
  password   String?
  name       String
  avatar     String?
  isLocalAuth Boolean  @default(true)
  googleId   String?  
  refreshTokens    RefreshToken[]
  posts      Post[]

  @@map("users")
}

model Post {
  id          String   @id @default(uuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  title       String
  description String?  @unique
  userId      String
  user        User     @relation(fields: [userId], references: [id])

  @@map("posts")
}
model RefreshToken {
  id          String   @id @default(uuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  hashedRt    String   @unique
  csrfSecret  String?  @unique
  userId      String
  user        User     @relation(fields: [userId], references: [id])

  @@map("refresh_tokens")
}

enum Role {
  USER
  ADMIN
}
